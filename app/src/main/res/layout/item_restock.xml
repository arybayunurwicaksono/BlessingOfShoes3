    <TextView
        android:id="@+id/txtTglRestock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="2021/12/30 20/20/20"
